(recipe "cucumber salad" (
	(description "quick, fresh, and delicious!")
	(ingredients [
		((2 each) cucumbers, smashed and cut into chunks)
		((1 each) garlic clove, minced)
		((1 tsp) rice vinegar)
		((0.5 tsp) sugar)
		((0.5 tsp) chili oil)
		((to taste) salt)
	])
	(instructions [
		"Combine soy sauce, vinegar, sugar, garlic, and chili oil in a small bowl."
		"Toss cucumbers with the dressing. Let sit for 10 minutes before serving."
		])