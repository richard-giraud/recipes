(recipe "scallion oil noodles" (
	(description "simple, authentic, meat- and dairy-free Chinese dish")
	(ingredients [
		((8 oz) dried noodles)
		((3 tbsp) neutral oil)
		((4-5 each) scallions, chopped)
		((2 tbsp) soy sauce)
		((1 tsp) sugar)
		((1 tsp) sesame oil)
		])
	(instructions [
		"Cook noodles per package instructions and drain."
		"Heat oil in a pan, add scallions, and fry until crispy."
		"Mix soy sauce, sugar, and sesame oil in a bowl. Add to noodles with scallion oil. Toss well and serve."
	])
))